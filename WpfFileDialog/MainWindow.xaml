<Window x:Class="WpfFileDialog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfFileDialog"
        mc:Ignorable="d"
        Title="MainWindow" Height="142.442" Width="466.666">
    <Grid>
        <Button Command="{Binding FetchFile}" Content="Search File" HorizontalAlignment="Left" Margin="24,59,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBlock HorizontalAlignment="Left" Margin="24,29,0,0" TextWrapping="Wrap" Text="File name:" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="118,29,0,0" TextWrapping="Wrap" Text="{Binding Name}" VerticalAlignment="Top" Width="294"/>
    </Grid>
</Window>
